{
  "name": "Medical Laboratory Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eg2.vscode-npm-script-runner"
      ]
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm ci",
  "postStartCommand": "bash -lc \"/workspace/scripts/codespaces-start-services.sh &> /workspace/codespaces-services.log || true; npm run dev &> /workspace/dev.log &\"",
  "workspaceFolder": "/workspace",
  "remoteUser": "vscode"
}
