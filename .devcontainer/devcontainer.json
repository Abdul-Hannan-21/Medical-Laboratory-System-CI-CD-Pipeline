{
  "name": "Medical Laboratory Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eg2.vscode-npm-script-runner"
      ]
    }
  },
  "forwardPorts": [3000],
  "postCreateCommand": "npm ci",
  "postStartCommand": "bash -lc \"/workspace/scripts/codespaces-start-services.sh &> /workspace/codespaces-services.log || true; npm run dev &> /workspace/dev.log &\"",
  // use root as a safe fallback user in case the image doesn't contain the `vscode` user
  // and create `vscode` inside the container if missing (keeps behaviour similar to Codespaces)
  "remoteUser": "root",
  "initializeCommand": "id -u vscode >/dev/null 2>&1 || (useradd -m -s /bin/bash vscode || adduser -D -s /bin/bash vscode) || true",
  "workspaceFolder": "/workspace"
}
